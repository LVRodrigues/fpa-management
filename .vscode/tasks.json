{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "fpa-server watch",
            "type": "shell",
            "command": "cargo watch -q -c -w src/ -x run",
            "options": {
                "cwd": "${workspaceFolder}/fpa-server"
            },
            "isBackground": true,
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "fpa-server tests watch",
            "type": "shell",
            "command": "cargo watch -q -c -w tests/ -x \"run -q health -- --nocapture\"",
            "options": {
                "cwd": "${workspaceFolder}/fpa-server"
            },
            "isBackground": true,
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "fpa-server build",
            "type": "shell",
            "command": "cargo build",
            "options": {
                "cwd": "${workspaceFolder}/fpa-server"
            },
            "isBackground": true,
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "fpa-client start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/fpa-client"
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "label": "fpa-client test",
            "type": "npm",
            "script": "test",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/fpa-client"
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        }
    ]
}